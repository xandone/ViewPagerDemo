<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.xandone.viewpagerdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.ShadeActivity"
            android:label="遮罩Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.SimplePagerActivity"
            android:label="简单的ViewPager"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.AutoPagerActivity"
            android:label="自动滑动的ViewPager"
            android:screenOrientation="portrait" />
    </application>

</manifest>